{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install && pnpm run build && cd pizzaz_server_python && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd pizzaz_server_python && python main.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

